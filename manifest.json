{
  "manifest_version": 3,
  "name": "Cookie Monster",
  "author": "Chris Bentkowski",
  "version": "0.1.1",
  "description": "Clears cookies and storage for specified websites when a tab is closed.",
  "permissions": [
    "tabs",
    "cookies",
    "storage",
    "webRequest",
    "browsingData"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options/options.html",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}